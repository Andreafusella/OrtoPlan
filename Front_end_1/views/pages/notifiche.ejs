<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notifiche</title>
    <link rel="stylesheet" href="./style/output.css">
    <link id="icon" rel="icon" type="image/png" href="/assets/logo.png">
</head>
<%- include ('components/navbar_home') %>
<body class="bg-white min-h-screen">
    <div class="flex justify-between m-5">
        <div></div>
        <div>
            <button onclick="deleteNotifiche()" class="btn btn-primary text-white bg-red-500 border-red-500 hover:bg-red-600 hover:border-red-600">Elimina Tutto</button>
        </div>
    </div>
    <div id="divEmpty"></div>

    <div id="tabella" class="relative z-[1]">
        <div class="flex flex-col items-center justify-center">
            <div class="m-10 h- bg-gray-300 p-5 rounded-2xl">
                <table class="table">
                    <thead class="text-2xl text-white font-bold text-center">
                        <tr>
                            <th></th>
                            <th>Piantagione</th>
                            <th>Data Invio</th>
                            <th>Azione</th>
                        </tr>
                    </thead>
                    <tbody class="text-lg text-slate-900 font-bold text-center">
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="modal" class="fixed inset-0 hidden z-50 flex items-center justify-center bg-black bg-opacity-50">
        <div class="modal-box flex flex-col gap-4 bg-white p-8 rounded-lg shadow-lg relative">
            <span id="close-modal" class="absolute top-2 right-2 text-gray-500 hover:text-gray-800 cursor-pointer">&times;</span>
            <p id="modal-text" class="mt-4"></p>
            <div class="modal-action flex justify-between mt-4">
                <div></div>
                <button type="button" class="btn text-white" onclick="closeModal()">
                    Chiudi
                </button>
            </div>
        </div>
    </div>
    
    <%- include ('components/footer') %>
    
    <script src="/script/notifiche.js"></script>
</body>
</html>
